<%- model_class = CarPoint -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<%= paginate @car_points %>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:make) %></th>
      <th><%= model_class.human_attribute_name(:model) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <% if can? :manage, CarPoint %>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @car_points.each do |car_point| %>
      <tr>
        <td><%= link_to car_point.id, car_point_path(car_point) %></td>
        <td><%= car_point.year %></td>
        <td><%= car_point.make %></td>
        <td><%= car_point.model %></td>
        <td><%=l car_point.created_at %></td>
        <% if can? :manage, CarPoint %>
          <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
            edit_car_point_path(car_point), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
            car_point_path(car_point),
            :method => :delete,
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
            :class => 'btn btn-xs btn-danger' %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_car_point_path,
            :class => 'btn btn-primary' %>
