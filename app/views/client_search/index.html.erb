<h1>Client Search</h1>
<%= simple_form_for :client_search, url: client_search_find_url, html: { class: 'form-inline' } do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-inline">
    <%= f.input :first_name, placeholder: "First Name", label: false %>
    <%= f.input :last_name, placeholder: "Last Name", label: false %>
    <%= f.input :city, placeholder: "City", label: false %>
    <%= f.input :state, placeholder: "State", label: false %>
    <%= f.input :facility_id, collection: @facilities, placeholder: "Facility", label: false %>
  </div>
  <br />
  <div class="form-actions">
    <%= f.button :submit, value: "Search", id: 'submitSearch' %>
  </div>
  <div id='tablediv'>
    <table id="results" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>City</th>
          <th>State</th>
          <th>Facility</th>
        </tr>
      </thead>

    </table>
  </div>
  <div id='error'>There was an error while searching.  Please try again later.</div>
  <div id='processing'>Searching...</div>
<% end %>
