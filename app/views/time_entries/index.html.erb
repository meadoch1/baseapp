<p id="notice"><%= notice %></p>
<div class='row-fluid'>
  <div class='col-md-9'>
    <div id='title-date' data-date="<%= @focus_date %>"><%= @focus_date.strftime("%A, %b %e") %></div>
  </div>
  <div class='col-md-3'>
    <div id='date-sel' >
      <button type="button" id="btn-prev" class="btn btn-default"><</button>
      <button type="button" id="btn-today" class="btn btn-default">Today</button>
      <button type="button" id="btn-next" class="btn btn-default">></button>
    </div>
  </div>
</div>

<div class='row-fluid'>
  <div class='col-md-2'>
    <%= link_to 'New Entry', new_time_entry_path, id: 'btn-new', class: "btn btn-success"  %>
  </div>
  <div class='col-md-10'>


      <tbody>
      <% @time_entries.each do |time_entry| %>
        <div class='row time-entry-row'>
          <div class='row'>
            <div class='time-entry task-name'><%= time_entry.task.name %>( <%= time_entry.project.name %> )</div></br>
          </div>
          <div class='row'>
            <div class='col-md-8'>
              <div class='row'>
                <div class='col-md-11'>
                  <div class='time-entry-description'><%= time_entry.description || "No description entered" %></div>
                </div>
                <div class='col-md-1'>
                  <div class='time-entry'><%= time_entry.accrued_hrs || "No description entered" %></div>
                </div>
              </div>
            </div>
            <div class='col-md-4'>
              <button type="button" id="btn-start-<%= time_entry.id %>" class="btn btn-success time-entry-start" data-time-entry-id=<%= time_entry.id %>>Start</button>
              <button type="button" id="btn-edit-<%= time_entry.id %>" class="btn btn-default time-entry-edit" data-time-entry-id=<%= time_entry.id %>>Edit</button>
            </div>
          </div>
        </div>
        <% end %>
      </tbody>
    </table


  </div>
</div>

