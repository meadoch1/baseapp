<%= simple_form_for @car_point, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :year %>
  <%= error_span(@car_point[:year]) %>
  <%= f.input :make %>
  <%= error_span(@car_point[:make]) %>
  <%= f.input :model %>
  <%= error_span(@car_point[:model]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                car_points_path, :class => 'btn btn-default' %>
<% end %>
